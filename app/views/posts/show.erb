 <h3><%= @post.title %></h3>
<img src="<%= @post.image_url %>" alt="<%= @post.title %>" height="200" width="auto">

<form class="" action="/posts/<%= @post.id %>/like" method="post">
    <input type="submit" name="" value="Like this Post!">
</form>
<p>Likes:<%= @likes.count %></p>

<strong>Created at: <%= @post.created_at %></strong>
<p><%= @post.description %></p>
<p>By: <%= @post.user.name %></p>

<% if authorized_to_edit(@post)%>

<a href="/posts/<%= @post.id %>/edit">Edit Post</a>

<form class="" action="/posts/<%= @post.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" name="" value="Delete Post!">
</form>

<% end %>